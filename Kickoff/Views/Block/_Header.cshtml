@model Kickoff.Models.Block.SiteHeaderModel

@{ 
    if (Model.BannerImage != null)
    {
    <style>
            .masthead{
                background-image: url( @(Model.BannerImage.CropUrl) ) !important;
            }

        .innerPageBanner {
            background-image: url( @(Model.BannerImage.CropUrl) ) !important;
        }
    </style>
    }
}

<!-- Navigation -->
<a class="menu-toggle rounded" href="#">
    <i class="fas fa-bars"></i>
</a>
<nav id="sidebar-wrapper">
    <ul class="sidebar-nav">
        @if (!string.IsNullOrEmpty(Model.MenuTitle))
        {
            <li class="sidebar-brand">
                <a class="js-scroll-trigger" href="#page-top">@Model.MenuTitle</a>
            </li>
        }

        @foreach (var item in Model.Navigation.NavigationItems)
        {
            <li class="sidebar-nav-item">
                <a class="" href="@item.Url">@item.Title</a>
            </li>
        }
    </ul>
</nav>

<!-- Header -->
@if (Model.UseHomepageHeader)
{
    <header class="masthead d-flex">
        <div class="container text-center my-auto">
            <h1 class="mb-1">@Model.HeaderText</h1>
            @if (!string.IsNullOrEmpty(Model.SubText))
            {
                <h3 class="mb-5">
                    <em>@Model.SubText</em>
                </h3>
            }

            @if (Model.BannerCTA != null)
            {
                <a class="btn btn-primary btn-xl js-scroll-trigger" href="@(Model.BannerCTA.Url)">@Model.BannerCTA.Name</a>
            }
        </div>
        <div class="overlay"></div>
    </header>
}
else
{
    <header class="d-flex innerPageBanner">
        <div class="container text-center my-auto">
            <h1 class="mb-1">@Model.HeaderText</h1>
            @if (!string.IsNullOrEmpty(Model.SubText))
            {
                <h3 class="mb-5">
                    <em>@Model.SubText</em>
                </h3>
            }
        </div>
        <div class="overlay"></div>
    </header>

}