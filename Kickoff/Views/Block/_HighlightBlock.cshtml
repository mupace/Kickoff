@using Kickoff.Constants
@inherits UmbracoViewPage<Kickoff.Models.Block.HighlightBlockModel>

@{
    var textSizeCss = Model.HasImage ? "col-md-9 col-xs-12" : "col-md-12 col-xs-12";
}

<section>
    <h3>@Model.Title</h3>

    @*Image Positioning and text*@
    <div class="row">
        @if (Model.HasImage)
        {
            if (Model.ImagePositionEnum == ImagePositionDropdown.Left)
            {
                <div class="col-md-3 col-xs-12">
                    <img src="@Model.Image.Url" alt="@Model.Image.Alt" title="@Model.Image.Title" />
                </div>
            }

            <div class="@textSizeCss">@Html.Raw(Model.Content)</div>

            if (Model.ImagePositionEnum == ImagePositionDropdown.Right)
            {
                <div class="col-md-3 col-xs-12">
                    <img src="@Model.Image.CropUrl" alt="@Model.Image.Alt" title="@Model.Image.Title" />
                </div>
            }

        }
    </div>
</section>