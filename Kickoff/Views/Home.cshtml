@using Kickoff.Models.ContentModels
@using Umbraco.Web.Models
@inherits Umbraco.Web.Mvc.UmbracoViewPage<HomeContentModel>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "Shared/_Layout.cshtml";
}

@{ 
    <style>
        footer{
            width: 100%;
            position: absolute;
            bottom: 0;
        }
    </style>
}

@section SeoInfo{
    <title>@Model.PageModel.Title</title>


    @if (Model.PageModel.SeoBase != null)
    {
        if (!string.IsNullOrEmpty(Model.PageModel.SeoBase.SeoDescription))
        {
            <meta name="description" value="@Model.PageModel.SeoBase.SeoDescription" />
        }

        if (Model.PageModel.SeoBase.SeoKeywords != null && Model.PageModel.SeoBase.SeoKeywords.Any())
        {
            <meta name="keywords" value="@string.Join(",", Model.PageModel.SeoBase.SeoKeywords)" />
        }


        if (Model.PageModel.SeoBase.SeoImage != null)
        {
            <meta name="image" value="@Model.PageModel.SeoBase.SeoImage.Url" />
        }
    }


}


@Html.GetGridHtml(Model, Kickoff.Constants.Pages.Home.Editorial)

